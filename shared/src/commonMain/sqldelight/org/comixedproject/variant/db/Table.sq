CREATE TABLE ServersDb (
id TEXT NOT NULL PRIMARY KEY,
name TEXT NOT NULL UNIQUE,
url TEXT NOT NULL,
username TEXT NOT NULL DEFAULT "",
password TEXT NOT NULL DEFAULT ""
);

loadAllServers:
SELECT * FROM ServersDb;

createServer:
INSERT OR IGNORE INTO ServersDb(id, name, url, username, password) VALUES (?, ?, ?, ?, ?);

updateServer:
UPDATE ServersDb SET name = ?, url = ?, username = ?, password = ? WHERE id = ?;

deleteServer:
DELETE FROM ServersDb WHERE id = ?;

CREATE TABLE AcquisitionLinksDb (
id TEXT NOT NULL PRIMARY KEY,
serverId TEXT NOT NULL,
linkId TEXT NOT NULL,
directory TEXT NOT NULL,
link TEXT NOT NULL,
title TEXT NOT NULL,
thumbnailURL TEXT
);

createLink:
INSERT OR IGNORE INTO AcquisitionLinksDb(id, serverId, linkId, directory, link, title, thumbnailURL) VALUES(?, ?, ?,?, ?, ?, ?);

getExistingLink:
SELECT id FROM AcquisitionLinksDb WHERE serverId = ? AND directory = ?;

deleteExistingLink:
DELETE FROM AcquisitionLinksDb WHERE id = ?;

loadAllLinks:
SELECT * FROM AcquisitionLinksDb;

loadLinksForParent:
SELECT * FROM AcquisitionLinksDb WHERE serverId = ? AND directory = ?;